<?xml version="1.0" ?>
<robot name="oa6">
  <resource location="$(find openarms)/meshes"/>

  <link name="torso">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry name="torso_mesh">
        <mesh filename="oa1_base"/>
      </geometry>
      <material name="Red">
        <color rgba="255 0 0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="torso_joint" type="fixed">
    <parent link="world"/>
    <child link="torso"/>
    <axis xyz="0 0 1"/>
    <anchor xyz="0 0 0"/>
  </joint>
</robot>

